@model CarManagementViewModel

@{
    var combustionEngineCar = (CombustionEngineCarViewViewModel)Model.Car;
}

<label for="Engine_Id">Engine:</label>
<select id="Engine_Id" asp-for="@combustionEngineCar.Engine.Id" name="Engine.Id" class="form-control">
    @if (Model.Car is null)
    {
        <option value="">Select Engine</option>
    }
    @foreach (var engine in Model.Options.CombustionEngineCarOptions.Engines)
    {
        <option value="@engine.Id">@engine.Model</option>
    }
</select>

