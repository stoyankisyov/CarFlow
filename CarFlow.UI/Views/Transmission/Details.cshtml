@model TransmissionViewModel

<div class="border p-3 mt-4">
    <div class="row align-content-center">
        <h1 class="text-center">@Model.Name</h1>
    </div>

    <table class="table table-bordered table-striped mt-5">
        <thead>
            <tr>
                <th class="text-center" style="font-size: 25px">
                    Variants
                </th>
            </tr>
            <tr>
                <th>Gear Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var transmission in Model.TransmissionVariants)
            {
                <tr>
                    <td>@transmission.GearCount</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="Transmission" class="actionButton backButton">Back</a>

</div>