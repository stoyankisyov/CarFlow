@model TransmissionViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb2">
            <h2 class="text-primary text-center">Create Transmission</h2>
        </div>
        <div class="mb-3">
            <label for="Name">Type</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div id="transmissionVariant-container">
            <div class="transmission">
                <div class="mb-3">
                    <label for="Transmissions">Gear Count</label>
                    <input asp-for="TransmissionVariants[0].GearCount" class="form-control" type="number" />
                    <span asp-validation-for="TransmissionVariants[0].GearCount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="container mt-3 mb-3">
            <div class="addTransmissionVariantButtonContainer">
                <button type="button" id="add-transmissionVariant">Add Variant</button>
            </div>
        </div>
    <div class="actionButtonsContainer">
            <button type="submit" class="actionButton addButton">Create</button>
            <a asp-action="Index" asp-controller="Transmission" class="actionButton backButton">Back</a>
    </div>
    </div>
</form>

<script src="~/js/TransmissionRelated/AddTransmissionVariant.js"></script>