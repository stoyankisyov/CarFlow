@model RegionViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center">Edit Region</h2>
        </div>
        <div class="mb-3">
            <label for="Name">Region</label>
            <input asp-for="Id" type="hidden">
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div id="subregion-container">
            @for (var i = 0; i < Model.Subregions.Count; i++)
            {
                <div class="subregion" id="subregion_@Model.Subregions[i].Id">
                    <div class="mb-3 row align-items-center">
                        <div class="col-10">
                            <label asp-for="@Model.Subregions[i].Name">Subregion</label>
                            <input asp-for="@Model.Subregions[i].Id" type="hidden"/>
                            <input asp-for="@Model.Subregions[i].Name" class="form-control"/>
                            <span asp-validation-for="@Model.Subregions[i].Name" class="text-danger"></span>
                        </div>
                        <div class="col mt-3">
                            <button type="button" class="deleteSubregionButton" onclick="deleteSubregion(@Model.Subregions[i].Id)">Delete Subregion</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="container mb-3">
            <div class="addSubregionButtonContainer">
                <button type="button" id="add-subregion">Add Subregion</button>
            </div>
        </div>
        <div class="actionButtonsContainer">
            <button type="submit" class="actionButton updateButton">Save</button>
            <a asp-action="Index" asp-controller="Regions" class="actionButton backButton">Back</a>
        </div>
    </div>
</form>

<script src="~/js/RegionRelated/DeleteSubregion.js"></script>
<script src="~/js/RegionRelated/AddSubregion.js"></script>