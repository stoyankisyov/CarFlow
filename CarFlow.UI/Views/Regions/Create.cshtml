@model RegionViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center">Create Region</h2>
        </div>
        <div class="mb-3">
            <label for="Name">Region</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div id="subregion-container">
            <div class="subregion">
                <div class="mb-3">
                    <label for="Subregions">Subregion</label>
                    <input type="text" name="Subregions[0].Name" class="form-control"/>
                    <span class="text-danger" data-valmsg-for="Subregions[0].Name" data-valmsg-replace="true"></span>
                </div>
            </div>
        </div>
        <div class="container mt-3 mb-3">
            <div class="addSubregionButtonContainer">
                <button type="button" id="add-subregion">Add Subregion</button>
            </div>
        </div>

        <div class="actionButtonsContainer">
            <button type="submit" class="actionButton" id="addButton">Create</button>
            <a asp-action="Index" asp-controller="Regions" class="actionButton" id="backButton">Back</a>
        </div>
    </div>
</form>

<script src="~/js/RegionRelated/AddSubregion.js"></script>