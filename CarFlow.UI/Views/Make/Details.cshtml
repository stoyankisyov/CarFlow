@model MakeViewModel

<div class="border p-3 mt-4">
    <div class="row align-content-center">
        <h1 class="text-center">@Model.Name</h1>
    </div>

    <table class="table table-bordered table-striped mt-5">
        <thead>
            <tr>
                <th class="text-center" style="font-size:25px">
                    Model Name
                </th>
                <th class="text-center" style="font-size:25px">
                    Model Variant
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carModel in Model.Models)
            {
                <tr>
                    <td>@carModel.Name</td>
                    <td>@carModel.ModelVariant</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="Make" class="actionButton backButton">Back</a>

</div>