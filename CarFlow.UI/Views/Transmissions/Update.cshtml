@model TransmissionViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb2">
            <h2 class="text-primary text-center">Edit Transmission</h2>
        </div>
        <div class="mb-3">
            <label for="Name">Type</label>
            <input asp-for="Id" type="hidden"/>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div id="transmissionVariant-container">
            @for (var i = 0; i < Model.TransmissionVariants.Count; i++)
            {
                <div class="transmissionVariant" id="transmissionVariant_@Model.TransmissionVariants[i].Id">
                    <div class="transmission mb-3 row align-items-center">
                        <div class="col-10">
                            <label asp-for="@Model.TransmissionVariants[i].GearCount">Gear Count</label>
                            <input asp-for="@Model.TransmissionVariants[i].GearCount" class="form-control" type="number"/>
                            <span asp-validation-for="@Model.TransmissionVariants[i].GearCount" class="text-danger"></span>
                            <input asp-for="@Model.TransmissionVariants[i].TransmissionId" type="hidden"/>
                            <input asp-for="@Model.TransmissionVariants[i].Id" type="hidden"/>
                        </div>
                        <div class="col mt-3">
                            <button type="button" class="deleteTransmissionVariantButton" onclick="deleteTransmissionVariant(@Model.TransmissionVariants[i].Id)">Delete Variant</button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="container mb-3">
            <div class="addTransmissionVariantButtonContainer">
                <button type="button" id="add-transmissionVariant">Add Variant</button>
            </div>
        </div>
        <div class="actionButtonsContainer">
            <button type="submit" class="actionButton updateButton">Save</button>
            <a asp-action="Index" asp-controller="Transmissions" class="actionButton backButton">Back</a>
        </div>
    </div>
</form>

<script src="~/js/TransmissionRelated/DeleteTransmissionVariant.js"></script>
<script src="~/js/TransmissionRelated/AddTransmissionVariant.js"></script>